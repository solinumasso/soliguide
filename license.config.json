{
  "license": "LICENSE.header",
  "ignore": [
    "packages/",
    "yarn.lock",
    "**/*.gzip",
    "**/*.gz",
    ".husky",
    ".idea/",
    ".env",
    "CHANGELOG.md",
    ".reuse/",
    "LICENSES/",
    ".nx/cache/",
    "**/*.license"
  ],
  "licenseFormats": {
    "^CODEOWNERS|^Dockerfile|Caddyfile$|^Caddyfile|cc|^.releaserc|^.dockerignore|^.gitignore|^.prettierignore|^.editorconfig|yaml|yml|conf|sh|example|toml": {
      "eachLine": {
        "prepend": "# "
      }
    },
    "xml|babel|svg": {
      "prepend": "<?xml version=\"1.0\" encoding=\"UTF-8\"?>\n<!--",
      "append": "-->"
    },
    "md|tpl": {
      "prepend": "<!--",
      "append": "-->"
    }
  },
  "trailingWhitespace": "TRIM",
  "regexIdentifier": "___"
}
