{
  "license": "../../LICENSE.header",
  "ignore": [
    "**/*.eot",
    "**/*.ttf",
    "**/*.woff",
    ".angular",
    ".browserslistrc",
    ".editorconfig",
    ".eslintcache",
    ".gitignore",
    ".prettierignore",
    "**/.gitkeep",
    "**/*.license"
  ],
  "licenseFormats": {
    "xml|svg": {
      "prepend": "<?xml version=\"1.0\" encoding=\"UTF-8\"?>\n<!--",
      "append": "-->"
    },
    "html|md": {
      "prepend": "<!--",
      "append": "-->"
    },
    "js|ts|css|scss": {
      "prepend": "/*",
      "append": " */",
      "eachLine": {
        "prepend": " * "
      }
    },
    "^Dockerfile|^Caddyfile|frontend|general|site|snippets|widget": {
      "eachLine": {
        "prepend": "# "
      }
    },
    "yaml|yml|conf|sh": {
      "eachLine": {
        "prepend": "# "
      }
    }
  },
  "trailingWhitespace": "TRIM",
  "regexIdentifier": "___"
}
