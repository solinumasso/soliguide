{
  "name": "@soliguide/design-system",
  "version": "4.125.0",
  "description": "Soliguide design system",
  "author": "Association Solinum <contact@solinum.org> (https://solinum.org)",
  "license": "AGPL-3.0-only",
  "main": "dist/index.js",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && yarn package",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepublishOnly": "yarn package",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "vitest",
    "lint": "yarn check && eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --cache -c .",
    "format:fix": "prettier --cache -w ."
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "peerDependencies": {
    "svelte": "^4.0.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1.4.1",
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/package": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^3.1.2",
    "@types/eslint": "^9.6.1",
    "@vitejs/plugin-legacy": "^5.4.3",
    "@vitest/coverage-v8": "^2.1.9",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-fp": "^2.3.0",
    "eslint-plugin-svelte": "^2.36.0",
    "globals": "^15.0.0",
    "isomorphic-dompurify": "^2.16.0",
    "license-check-and-add": "^4.0.5",
    "lint-staged": "^15.5.1",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "publint": "^0.2.0",
    "sass": "^1.77.6",
    "svelte": "^5.51.5",
    "svelte-check": "^3.6.0",
    "terser": "^5.36.0",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.30.1",
    "vite": "^5.4.21",
    "vitest": "^2.1.9"
  },
  "dependencies": {
    "i18next": "^23.11.5",
    "normalize.css": "^8.0.1",
    "svelte-google-materialdesign-icons": "^1.0.5"
  },
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "lint-staged": {
    "*.{js,ts,svelte,css,scss,postcss,md,json}": "prettier --cache --ignore-unknown -w",
    "*.{js,ts,svelte}": "eslint . --fix"
  }
}
