{
  "license": "../../LICENSE.header",
  "ignore": [
    "**/*.eot",
    "**/*.ttf",
    "**/*.woff",
    "**/*.woff2",
    "**/*.webp",
    ".eslintcache",
    "src/robots.txt",
    "**/.gitkeep",
    "**/*.pdf",
    "src/assets/images/partners/*.svg",
    "**/*.license",
    ".svelte-kit/**/*",
    "build/**/*",
    ".prettierrc",
    "**/.DS_Store",
    "storybook-static/**/*",
    "build-storybook.log",
    "**/*.mdx",
    "coverage/**/*"
  ],
  "licenseFormats": {
    "xml|svg": {
      "prepend": "<?xml version=\"1.0\" encoding=\"UTF-8\"?>\n<!--",
      "append": "-->"
    },
    "html|svelte|md": {
      "prepend": "<!--",
      "append": "-->"
    },
    "js|ts|css|scss": {
      "prepend": "/*",
      "append": " */",
      "eachLine": {
        "prepend": " * "
      }
    },
    "^Dockerfile|conf|^.gitignore|^.prettierignore|deploy": {
      "eachLine": {
        "prepend": "# "
      }
    }
  },
  "trailingWhitespace": "TRIM",
  "regexIdentifier": "___"
}
